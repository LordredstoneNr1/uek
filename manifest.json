{
    "manifest_version": 2,
    "name": "Universe Enhancement Kit",
    "description": "Enhances your League Universe page by adding some functionality.",
    "version": "0.6.0",
    "permissions": ["storage", "contextMenus"],
    
    "icons": { 
        "16": "images/icons/16.png",
        "32": "images/icons/32.png",
        "48": "images/icons/32.png",
        "64": "images/icons/32.png",
        "128": "images/icons/128.png"
        },
    "commands": {
        "toggle-panel": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Command+Shift+L"
            },
            "description": "Toggles the sidebar on all Universe Websites."
        }
    },
    "background": {
        "scripts": ["scripts/background.js", "scripts/data.js"],
        "persistent": false
        },
    "browser_action": {
        "default_popup": "html/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://universe.leagueoflegends.com/*"],
            "css": ["html/style.css"],
            "js": ["scripts/contentScript.js"]
        }
    ],
    "web_accessible_resources": [
        "html/inject.html",
        "images/*.png"
    ]
}